---
import Common from './_common.astro'
const { path } = Astro.params
---

<Common title={path}>
	<div w-pos-relative w-mt-0 w-w-full w-h-35vw w-bg="#3c4896">
		<div
			w-pos-absolute
			w-top="20%"
			w-left="10%"
			w-color-white
		>
			<p w-text-4xl sm:w-text-6xl>I/O Club</p>
			<input
				id="text"
				type="text"
				w-bg-transparent
				w-text-md
				sm:w-text-2xl
				w-outline-none
			/>
		</div>
		<div
			w-pos-absolute
			w-bottom-0
			w-left="10%"
			w-color-white
			w-flex="~ row"
			w-text-md
			sm:w-text-2xl
			children:w-pr-4rem
		>
			<div>
				<p>二维码呢</p>
			</div>
			<div>
				<p>二维码呢</p>
			</div>
		</div>
		<img
			w-pos-absolute
			w-bottom-0
			w-right="4%"
			sm:w-right="10%"
			w-h-25vw
			w-drop-shadow-pig
			w-drop-shadow-color-gray-800
			alt="tt"
			src="/pig.3.png"
		/>
	</div>
</Common>
